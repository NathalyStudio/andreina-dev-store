        {
          "value": "column-reverse",
          "label": "Bottom"
        }
      ],
      "default": "column-reverse"
    },
    {
      "type": "image_picker",
      "id": "phone_icon",
      "label": "Custom phone icon"
    },
    {
      "type": "html",
      "id": "phone_number",
      "label": "Phone number info",
      "default": "<p>Call Us<br>123-456-789</p>"
    },
    {
      "type": "image_picker",
      "id": "email_icon",
      "label": "Custom email icon"
    },
    {
      "type": "html",
      "id": "email_input",
      "label": "Email info",
      "default": "<p>Email Us At<br> info@qodespace.com</p>"
    },
    {
      "type": "image_picker",
      "id": "schedule_icon",
      "label": "Custom schedule icon"
    },
    {
      "type": "html",
      "id": "schedule_line",
      "label": "Schedule line",
      "default": "<p>M-F: 7:30 AM to 6:00 PM (PST)<br>Sat: 9:00 AM to 3:00 PM (PST)</p>"
    },
    {
      "type": "image_picker",
      "id": "location_icon",
      "label": "Custom location icon"
    },
    {
      "type": "html",
      "id": "location_line",
      "label": "Location line",
      "default": "<p>Location line 1<br>Location line 2</p>"
    },
    {
      "type": "header",
      "content": "Contact info layout"
    },
    {
      "type": "select",
      "label": "Contact info layout",
      "options": [
        {
          "value": "flex-start",
          "label": "Top"
        },
        {
          "value": "flex-end",
          "label": "Bottom"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "space-between",
          "label": "Space between"
        },
        {
          "value": "space-around",
          "label": "Space around"
        },
        {
          "value": "space-evenly",
          "label": "Space evenly"
        }
