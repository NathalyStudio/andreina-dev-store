{{ 'swiper-bundle.min.css' | asset_url | stylesheet_tag }}

{%- style -%}
.section-{{ section.id }}-padding {
  padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
  padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
}
.section-icon-carousel {
  overflow: hidden;
}
.section-icon-carousel .swiper-wrapper {
  align-items: center;
}
.section-icon-carousel .swiper-slide {
  display: grid;
  min-height: 75px;
  align-items: center;
}
.section-icon-carousel .swiper-slide img {
  margin: 0.5rem auto;
}

{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
    <div class="section-icon-carousel page-width">
        {% if section.settings.heading != blank %}
            <h1 class="{{ section.settings.icon-carousel-heading__text_alignment }} heading {{ section.settings.heading_size }}">{{ section.settings.heading | escape }}</h1>
        {% endif %}

        <div class="icon-carousel-{{ section.id }}">
            <div class="swiper-wrapper">
                {% for block in section.blocks %}
                    <div class="swiper-slide">
                    {% if block.settings.link != blank %}
                        <a href="{{ block.settings.link }}">
                    {% endif %}
                    {% if block.settings.icon != blank %}
                        <img src="{{ block.settings.icon | image_url: width: 5760 }}" alt="{{ block.settings.icon.alt }}" loading="lazy"
                        width="{{ block.settings.image-width }}" height="auto" class="featured-icon">
                    {% endif %}
                    {% if block.settings.link != blank %}
                        </a>
                    {% endif %}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>

<script src="{{ 'swiper-bundle.min.js' | asset_url }}"></script>
  <script type="text/javascript">
    const iconCarousel = new Swiper('.icon-carousel-{{ section.id }}', {
      // Optional parameters
      direction: 'horizontal',
      draggable: true,
      loop: true,
      autoplay: true,
      autoplay: {
        delay: {{ section.settings.carousel_speed }},
      },
      slidesPerView: 2,
      spaceBetween: 20,
        // Responsive breakpoints
        breakpoints: {
            990: {
                slidesPerView: {{ section.settings.slides_per_view_desktop }},
                spaceBetween: 20
            }
        }
      });
  </script>

{% schema %}
{
  "name": "Icon carousel",
  "class": "icon-carousel",
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "Section layout"
    },
    {
      "type": "text",
      "id": "heading",
      "default": "Heading",
      "label": "Section heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        }
      ],
      "default": "h1",
      "label": "t:sections.all.heading_size.label"
    },
    {
      "type": "select",
      "id": "icon-carousel-heading__text_alignment",
      "label": "Heading align",
      "options": [
        {
          "value": "left",
          "label": "t:settings_schema.global.settings.text_alignment.options__1.label"
        },
        {
          "value": "center",
          "label": "t:settings_schema.global.settings.text_alignment.options__2.label"
        },
        {
          "value": "right",
          "label": "t:settings_schema.global.settings.text_alignment.options__3.label"
        }
      ],
      "default": "left"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "t:sections.all.colors.accent_1.label"
        },
        {
          "value": "accent-2",
          "label": "t:sections.all.colors.accent_2.label"
        },
        {
          "value": "background-1",
          "label": "t:sections.all.colors.background_1.label"
        },
        {
          "value": "background-2",
          "label": "t:sections.all.colors.background_2.label"
        },
        {
          "value": "inverse",
          "label": "t:sections.all.colors.inverse.label"
        }
      ],
      "default": "background-1",
      "label": "t:sections.all.colors.label"
    },
    {
      "type": "range",
      "id": "slides_per_view_desktop",
      "label": "Slides per view on desktop",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 3
    },
    {
      "type": "range",
      "id": "carousel_speed",
      "label": "Delay for autoscroll (in ms)",
      "info": "The lower the number, the faster the carousel will move.",
      "default": 4000,
      "min": 1000,
      "max": 6000,
      "step": 500
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "icon",
      "name": "Icon",
      "settings": [
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "range",
          "id": "image-width",
          "min": 100,
          "max": 300,
          "step": 20,
          "unit": "px",
          "default": 100,
          "label": "Icon width in px"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Icon carousel"
    }
  ]
}
{% endschema %}